export const postUpload = async (req, res) => {
  const {
    body: { title, description },
    file: { path },
  } = req;

  const newVideo = await Video.create({
    fileUrl: path,
    title,
    description,
  });

  console.log(newVideo);
  //To Do: Upload and save video
  res.redirect(routes.videoDetail(newVideo.id));
};
